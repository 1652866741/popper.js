{
  "name": "popper.js",
  "version": "1.0.0-alpha.7",
  "description": "A kickass library to manage your poppers",
  "main": "build/popper.js",
  "scripts": {
    "prebuild": "npm run lint",
    "pretest": "npm run lint",
    "build": "npm run build:popper && npm run build:tooltip",
    "build:popper": "npm run build:popper:dev && npm run build:popper:min",
    "build:popper:dev": "rollup -c ./scripts/rollup.config.popper.js",
    "build:popper:min": "rollup -c ./scripts/rollup.config.popper.min.js",
    "build:tooltip": "npm run build:tooltip:dev && npm run build:tooltip:min",
    "build:tooltip:dev": "rollup -c ./scripts/rollup.config.tooltip.js",
    "build:tooltip:min": "rollup -c ./scripts/rollup.config.tooltip.min.js",
    "lint": "eslint .",
    "test": "karma start ./scripts/karma.conf.js",
    "test:dev": "cross-env NODE_ENV=DEVELOPMENT npm test",
    "doc": "npm run doc:popper && npm run doc:tooltip",
    "doc:popper": "rollup -c ./scripts/rollup.config.popper.js -o ./.tmp/popper.js && jsdoc2md ./.tmp/popper.js > ./doc/_includes/popper-documentation.md",
    "doc:tooltip": "rollup -c ./scripts/rollup.config.tooltip.js -o ./.tmp/tooltip.js && jsdoc2md ./.tmp/tooltip.js > ./doc/_includes/tooltip-documentation.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FezVrasta/popper.js.git"
  },
  "author": "Federico Zivolo <federico.zivolo@gmail.com>",
  "contributors": [
    {
      "name": "Andrea Scian√≤"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FezVrasta/popper.js/issues"
  },
  "homepage": "https://popper.js.org",
  "devDependencies": {
    "babel-eslint": "^7.1.0",
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-preset-babili": "^0.0.9",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-stage-0": "^6.5.0",
    "cross-env": "^3.1.3",
    "deep-assign": "^2.0.0",
    "eslint": "^3.2.2",
    "eslint-plugin-jasmine": "^2.1.0",
    "jasmine-core": "^2.4.1",
    "jsdoc-to-markdown": "^2.0.1",
    "karma": "^1.1.2",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-rollup-preprocessor": "^3.0.1",
    "karma-safari-launcher": "^1.0.0",
    "karma-sauce-launcher": "^1.0.0",
    "rollup": "^0.37.0",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-node-resolve": "^2.0.0"
  }
}
