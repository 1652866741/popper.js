{
  "name": "popper2",
  "version": "1.0.0",
  "main": "dist/cjs/popper.js",
  "main:umd": "dist/umd/popper.js",
  "module": "lib/index.js",
  "author": "Federico Zivolo <fzivolo@quid.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf lib && rimraf dist && rimraf test/visual/dist",
    "test": "jest --coverage --watch",
    "dev": "concurrently 'yarn dev:serve' 'yarn dev:bundles --watch'",
    "dev:serve": "serve -s tests/visual",
    "dev:bundles": "cross-env NODE_ENV=dev rollup -c rollup.config.js",
    "build": "yarn clean && yarn build:es && yarn build:bundles",
    "build:es": "babel src -d lib --ignore '*.test.js,__mocks__'",
    "build:bundles": "rollup -c rollup.config.js",
    "precommit": "pretty-quick --staged"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true
  },
  "babel": {
    "plugins": [
      "transform-flow-strip-types",
      "transform-class-properties",
      "transform-object-rest-spread"
    ],
    "env": {
      "test": {
        "presets": [
          "env"
        ]
      }
    }
  },
  "jest": {
    "setupFiles": ["raf/polyfill"]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.4",
    "flow-bin": "^0.70.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "prettier": "^1.12.1",
    "pretty-quick": "^1.4.1",
    "raf": "^3.4.0",
    "rollup": "^0.58.2",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-replace": "^2.0.0",
    "serve": "^6.5.6"
  }
}
